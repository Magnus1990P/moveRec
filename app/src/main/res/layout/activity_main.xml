<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativeLayout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtID"
        android:text="150"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/txtConst5"
        android:textAlignment="textStart"
        android:layout_alignStart="@+id/txtConst4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Capture"
        android:id="@+id/btnCap"
        android:textAlignment="center"
        android:textSize="35dp"
        android:nestedScrollingEnabled="false"
        android:onClick="onClick()"
        android:layout_marginBottom="86dp"
        android:layout_above="@+id/txtConst3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtConst5"
        android:height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cur X"
        android:id="@+id/curX"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cur Y"
        android:id="@+id/curY"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_alignTop="@+id/curX"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cur Z"
        android:id="@+id/curZ"
        android:layout_alignTop="@+id/curY"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0/30"
        android:id="@+id/txtCount"
        android:textSize="30dp"
        android:layout_alignTop="@+id/txtConst2"
        android:layout_toEndOf="@+id/txtConst1" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reg ID: "
        android:id="@+id/txtConst1"
        android:textSize="30dp"
        android:textAlignment="textStart"
        android:layout_alignBottom="@+id/txtID"
        android:layout_alignParentStart="false"
        android:layout_toStartOf="@+id/txtID"
        android:layout_alignTop="@+id/txtID"
        android:layout_centerInParent="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Run:"
        android:id="@+id/txtConst2"
        android:textSize="30dp"
        android:layout_below="@+id/txtConst1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/txtCount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current X"
        android:id="@+id/txtConst3"
        android:layout_above="@+id/curX"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Y"
        android:id="@+id/txtConst4"
        android:layout_above="@+id/curY"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Z"
        android:id="@+id/txtConst5"
        android:layout_above="@+id/curZ"
        android:layout_alignEnd="@+id/curZ" />

</RelativeLayout>
